
grades = {'A+': 4.33, 'A': 4.0, 'A-': 3.67, 'B+': 3.33, 'B': 3.0,
'B-': 2.67, 'C+': 2.33, 'C': 2.0, 'C-': 1.67,
'D+': 1.33, 'D': 1.0, 'F': 0.0}

count = 0  # переменная для подсчета количества оценок
total = 0  # переменная для подсчета суммы баллов

while True:  # бесконечный цикл
grade = input("Введите буквенную оценку или пустую строку для окончания ввода: ")
if grade == "":
break  # выход из цикла при вводе пустой строки
total += grades[grade]  # добавляем баллы по текущей оценке
count += 1  # увеличиваем количество оценок

if count == 0:  # если пользователь не ввел ни одной оценки
print("Средняя оценка не может быть рассчитана.")
else:
print("Средняя оценка: {:.1f}".format(total/count))  # выводим среднюю оценку на экран с одним знаком после запятой
