# задаем два слова
word1 = "медведь"
word2 = "яблоко"

# проверяем, начинается ли первое слово на ту же букву, на которую заканчивается второе слово
if word1[0] == word2[-1]:
    print("Первое слово", word1, "начинается на ту же букву, на которую заканчивается второе слово", word2)
else:
    print("Первое слово", word1, "не начинается на ту же букву, на которую заканчивается второе слово", word2)
