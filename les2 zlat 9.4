
1. # Вводим оценки по строкам
grades = []
for i in range(12):
    row = []
    for j in range(3):
        grade = int(input(f"Введите оценку ученика {i+1} за предмет {j+1}: "))
        row.append(grade)
    grades.append(row)

# Считаем суммы оценок каждого ученика
for i in range(12):
    sum = 0
    for j in range(3):
        sum += grades[i][j]
    print(f"Сумма оценок ученика {i+1}: {sum}")


