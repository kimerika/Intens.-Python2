
holidays = {
    "1 января": "Новый год",
    "7 января": "Рождество Христово",
    "23 февраля": "День защитника Отечества",
    "8 марта": "Международный женский день",
    "1 мая": "Праздник Весны и Труда",
    "9 мая": "День Победы",
    "12 июня": "День России",
    "4 ноября": "День народного единства"
}

day_input = input("Введите день (число): ")
month_input = input("Введите месяц (словом): ")

date = day_input + ' ' + month_input.lower()

if date in holidays:
    print("На", day_input, month_input, "празднуется", holidays[date])
else:
    print("На", day_input, month_input, "праздники не приходятся")
