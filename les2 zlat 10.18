    a = random.randint(1,9)
    b = random.randint(1,9)
    prod = a * b

    # задаем вопрос пользователю и считываем ответ
    answer = int(input(f'Чему равно произведение {a} x {b}? (введите 0 для выхода)'))

    if answer == 0:
        # выход из программы при вводе нуля
        break 

    # проверяем ответ и выводим сообщение о правильности
    if answer == prod:
        print('Правильно!')
