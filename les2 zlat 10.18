import random

# инициализируем счетчики правильных и неправильных ответов
num_correct = 0
num_incorrect = 0

# задаем 20 вопросов, генерируя каждый раз новые случайные числа
for i in range(20):
    a = random.randint(1,9)
    b = random.randint(1,9)
    prod = a * b

    # задаем вопрос пользователю и считываем ответ
    answer = int(input(f'Чему равно произведение {a} x {b}? '))

    # проверяем ответ и обновляем счетчики
    if answer == prod:
        print('Правильно!')
        num_correct += 1
    else:
        print(f'Неправильно. Правильный ответ: {prod}.')
        num_incorrect += 1

# выводим общую статистику
print(f'Вы ответили правильно на {num_correct} вопросов из 20.')
