
mag = float(input("Введите магнитуду землетрясения по шкале Рихтера: "))

if mag < 2.0:
    print("Микро землетрясение - не ощущается")
elif mag >= 2.0 and mag < 3.0:
    print("Очень слабое землетрясение - ощущается редко")
elif mag >= 3.0 and mag < 4.0:
    print("Слабое землетрясение - ощущается многими, редко вызывает ущерб")
elif mag >= 4.0 and mag < 5.0:
    print("Умеренное землетрясение - ощущается всеми, может вызвать разрушения")
elif mag >= 5.0 and mag < 6.0:
    print("Сильное землетрясение - вызывает значительные разрушения")
elif mag >= 6.0 and mag < 7.0:
    print("Очень сильное землетрясение - разрушает даже хорошо построенные здания")
elif mag >= 7.0 and mag < 8.0:
    print("Разрушительное землетрясение - вызывает катастрофические разрушения")
else:
    print("Крупное землетрясение - полное разрушение")
