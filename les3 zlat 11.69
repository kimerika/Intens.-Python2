
arr = [4, 8, 2, 7, 0, 5, 6, 8, 1, 8] # заданный массив
last_elem = arr[-1] # определяем последний элемент массива

a = 2 # число, которому элементы должны быть кратны

count_a = 0 # переменная для подсчета элементов, кратных числу a
count_diff = 0 # переменная для подсчета элементов, отличных от последнего элемента


for i in arr: # проходим по каждому элементу в массиве
    if i != last_elem: # если элемент отличается от последнего элемента, увеличиваем счетчик элементов, отличных от последнего элемента
        count_diff += 1
    if i % a == 0: # если элемент кратен числу a, увеличиваем счетчик элементов, кратных числу a
        count_a += 1

print(f'Количество элементов, отличных от последнего элемента: {count_diff}')
print(f'Количество элементов, кратных числу {a}: {count_a}')

