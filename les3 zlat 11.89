
# задаем исходный массив
rainfall = [0, 2, 7, 0, 0, 4, 0, 3, 6, 10, 0, 15, 0, 0, 0, 8, 0, 5, 0, 0, 12, 8, 0, 1, 0, 0, 3, 7, 0, 2, 0]

# инициализируем счетчик дней с дождем, и сумму осадков
count = 0
summa = 0

# перебираем элементы массива и считаем дни с дождем
for i in range(len(rainfall)):
    if rainfall[i] > 0:
        count += 1
        summa += rainfall[i]

# вычисляем среднее арифметическое осадков в дни с дождем
if count > 0:
    avg = summa / count
    print("Среднее количество осадков в дни с дождем за август равно:", avg)
else:
    print("В августе не было дождей")
