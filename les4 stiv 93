
def center_str(s, w):
    """
    Функция возвращает новую строку, в которой исходная строка s размещена по центру окна заданной ширины w
    """
    if len(s) >= w:
        return s
    else:
        # Рассчитываем количество пробелов, которые нужно добавить в начале строки
        spaces = (w - len(s)) // 2
        return " " * spaces + s
  
# Пример использования функции

s = "Привет, мир!"
print(center_str(s, 10)) # Вывод: " Привет, мир!"
print(center_str(s, 20)) # Вывод: "     Привет, мир!    "
print(center_str(s, 5))  # Вывод: "Привет, мир!"
