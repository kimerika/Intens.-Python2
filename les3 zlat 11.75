
# Определяем массив с результатами 20 игр футбольной команды
results = [3, 1, 3, 1, 0, 1, 0, 3, 1, 3, 0, 1, 0, 1, 1, 3, 0, 0, 1, 3]

# Инициализация переменных для подсчета количества выигрышей и ничьих
wins = 0
draws = 0

# Обходим все значения массива и подсчитываем количество выигрышей и ничьих
for result in results:
    if result == 3:
        wins += 1
    elif result == 1:
        draws += 1

# Выводим результаты
print("Количество выигрышей команды:", wins)
print("Количество ничьих команды:", draws)

